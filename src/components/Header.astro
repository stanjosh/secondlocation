---
const { title } = Astro.props;
export const partial = true;
---

<header>
    <div class="logo">
        logo
    </div>

    <h1>{ title }</h1>

    <div>
        <nav>
            <ul>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    ul {
        display: flex;
        justify-content: space-around;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 10px;
        font-size: larger;
    }

    ul li a {
        text-decoration: none;
        font-weight: bold;
        color: #333;
        
    }

    .logo {
        font-size: 1.5em;
        border: 2px solid #333;
        padding: 25px;
    }

    header {
        
        display: flex;
        justify-content: space-between;
        background-color: #f4f4f4;
        color: #333;
        padding: 15px;
        text-align: center;
        align-items: center;
        font-size: 1rem;
    }
</style>